<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.movies.detail.EADetailMovieFragment">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/item_image_large"
        android:layout_height="@dimen/item_image_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/ea_margin_padding_size_xxlarge"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="titulo"
        style="@style/title_style"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/ea_margin_padding_size_xxlarge"/>

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="overview"
        android:textSize="@dimen/ea_txt_description"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/ea_margin_padding_size_xxlarge"/>


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="1900-01-01"
        android:textSize="@dimen/ea_txt_description"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_overview"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/ea_margin_padding_size_xxlarge"/>




</androidx.constraintlayout.widget.ConstraintLayout>